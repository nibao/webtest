{
    "name": "AnyShare Extension",
    "version": "1.1.5",
    "manifest_version": 2,
    "description": "AnyShare Extension.",
    "browser_action": {
        "default_icon": "img/icon-32.png",
        "default_popup": "index.html",
        "default_title": "AnyShare"
    },
    "icons":{
        "16": "img/icon-16.png",
        "32": "img/icon-32.png",
        "48": "img/icon-48.png",
        "128": "img/icon-128.png"
    },
    "background": {
        "persistent": true,
        "page":"background.html"
    },
    "content_scripts":
        [
            {
                "js": [ "js/anyshare_script.js"],
                "matches": [ "http://*/*", "https://*/*" ]
            }
        ],
    "permissions": [
        "tabs",
        "cookies",
        "contextMenus",
        "webRequest",
        "webRequestBlocking",
        "storage",
        "downloads",
        "http://*/*",
        "https://*/*"
    ],
    "content_security_policy": "script-src 'self'; object-src 'self'",
    "web_accessible_resources":[
        "img/icon-16.png",
        "img/close.png",
        "img/vtip_arrow.png"
    ]
}