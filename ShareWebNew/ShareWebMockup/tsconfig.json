{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es2015",
            "es2016",
            "es2017"
        ],
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "downlevelIteration": true,
        "alwaysStrict": true,
        "pretty": true,
        "sourceMap": true
    },
    "exclude": [
        "node_modules"
    ]
}