{
    "compilerOptions": {
        "target": "es5",
        "jsx": "react",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "dom"
        ],
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "downlevelIteration": true,
        "alwaysStrict": false,
        "noImplicitUseStrict": true,
        "allowJs": true,
        "pretty": true,
        "sourceMap": false
    },
    "exclude": [
        "node_modules"
    ]
}